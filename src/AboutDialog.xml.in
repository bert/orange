<?xml version="1.0" encoding="UTF-8" ?>
<interface>
  <object class="AboutDialog" id="dialog">
    <property name="title">About @PACKAGE_NAME@</property>
    <property name="border-width">15</property>
    <property name="width-request">640</property>
    <property name="height-request">480</property>    
    <child internal-child="vbox">
      <object class="GtkVBox" id="content">
        <property name="visible">TRUE</property>
        <property name="spacing">10</property>
        <child>
          <object class="GtkLabel" id="package-name-label">
            <property name="visible">TRUE</property>
            <property name="use-markup">TRUE</property>
            <property name="label">&lt;span size="xx-large" weight="heavy"&gt;@PACKAGE_NAME@&lt;/span&gt;</property>
            <property name="xalign">0.0</property>
          </object>
          <packing>
            <property name="expand">FALSE</property>
            <property name="fill">TRUE</property>
          </packing>
        </child>
        <child>
          <object class="GtkLabel" id="package-version-label">
            <property name="visible">TRUE</property>
            <property name="use-markup">TRUE</property>
            <property name="label">Version @PACKAGE_VERSION@</property>
            <property name="xalign">0.0</property>
          </object>
          <packing>
            <property name="expand">FALSE</property>
            <property name="fill">TRUE</property>
          </packing>
        </child>
        <child>
          <object class="GtkLabel" id="package-url-label">
            <property name="visible">TRUE</property>
            <property name="use-markup">TRUE</property>
            <property name="label">&lt;a href="@PACKAGE_URL@"&gt;@PACKAGE_URL@&lt;/a&gt;</property>
            <property name="xalign">0.0</property>
          </object>
          <packing>
            <property name="expand">FALSE</property>
            <property name="fill">TRUE</property>
          </packing>
        </child>
      </object>
    </child>
    <child internal-child="action_area">
      <object class="GtkHButtonBox" id="buttons">
        <property name="visible">TRUE</property>
        <child>
          <object class="GtkButton" id="button-ok">
            <property name="visible">TRUE</property>
            <property name="label">gtk-ok</property>
            <property name="use-stock">TRUE</property>
          </object>
        </child>
      </object>
    </child>
    <action-widgets>
      <action-widget response="-5">button-ok</action-widget>
    </action-widgets>
  </object>
</interface>

